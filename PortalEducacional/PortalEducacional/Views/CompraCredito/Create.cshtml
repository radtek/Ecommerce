@model PortalEducacional.Models.ViewModel.CompraCreditoViewModel
@{
    ViewData["Title"] = "Epta Educação";
}
<div class="ibox-content">
    <div class="page-head">
        <h2><i class="fa fa-credit-card"></i> Compra Crédito</h2>
        <ol class="breadcrumb">
            <li><a href="#">Cantina</a></li>
            <li><a href="#" class="color-primary">Compra Crédito</a></li>
        </ol>
    </div>
    <div class="block-clean">
        <div class="block-noborder">
            <div class="row">
                <form asp-action="Create">
                    <div class="col-sm-6 col-md-5 col-lg-4"></div>
                    <div class="col-sm-6 col-md-6 col-lg-4" style="margin-top: -100px !important">
                        <div class="box box-widget widget-user">
                            <div class="widget-user-header bg-aqua-active" style="background-color: #072d40 !important;">
                                <input asp-for="Aluno.Nome" type="hidden" />
                                <input asp-for="Aluno.Serie.Descricao" type="hidden" />
                                <input asp-for="SaldoDisponivel" type="hidden" />
                                <input asp-for="TotalCredito" type="hidden" />
                                <input asp-for="Aluno.AlunoID" type="hidden" />
                                <h3 class="widget-user-username">@Model.Aluno.Nome</h3>
                                <h5 class="widget-user-desc">@Model.Aluno.Serie.Descricao</h5>
                            </div>
                            <div class="widget-user-image">
                                @if (Model.Aluno.Foto == null)
                                {
                                    <img class="img-circle" src="~/images/Cantina/img-user.jpg">
                                }
                                else
                                {
                                    <img src="@String.Format("data:image/jpg;base64,{0}", Model.Imagem)" class="img-circle" />
                                }
                            </div>
                            <div class="box-footer">
                                <div class="rox">
                                    <div class="col-sm-5 col-md-4 col-lg-4 border-right">
                                        <div class="description-block">
                                            <h5 class="description-header">Saldo Disponível</h5>
                                            @if (Model.SaldoDisponivel == null)
                                            {
                                                <span class="description-text">R$ 0,00</span>
                                            }
                                            else
                                            {
                                                <span class="description-text">R$ @Model.SaldoDisponivel</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-sm-1 col-md-4 col-lg-4 border-right">
                                        <div class="description-block">
                                            <h5 class="description-header"></h5>
                                            <span class="description-text">&nbsp;</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-md-4 col-lg-4">
                                        <div class="description-block">
                                            <h5 class="description-header">Total de Créditos</h5>
                                            @if (Model.TotalCredito == 0)
                                            {
                                                <span class="description-text">R$ 0,00</span>
                                            }
                                            else
                                            {
                                                <span class="description-text">R$ @Model.TotalCredito</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1 col-md-1 col-lg-4"></div>
                    <div class="col-sm-12 col-col-md-12 col-lg-12 no-padding right top">
                        @if (Model.MaisAlunos)
                        {
                            <a class="btn btn-trans btn-info" onclick="OpenModalSelecionaAluno(true);"><i class="fa fa-user"></i> Alterar Aluno</a>
                        }
                        <input type="submit" value="Finalizar Compra" class="btn btn-success" id="btnSalvar" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-default"><i class="fa fa-close"></i> Cancelar</a>
                    </div>
                    <div class="fix"></div>
                    <div class="divisor">
                        <div class="divdentor"></div>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <h5 class="headwi primary">Dados Pagamento</h5>
                        <div class="form-horizontal group-border-dashed">
                            <input type="hidden" asp-for="BandeiraID" />
                            <input type="hidden" asp-for="Aluno.EscolaID" />

                            <div class="form-group col-sm-12 col-md-8 col-lg-4">
                                <h5 class="headwi danger">Valor Crédito</h5>
                                <input asp-for="FaturamentoCartao.Valor" class="form-control monetario" placeholder="R$" />
                            </div>
                            <div class="fix"></div>

                            <div class="form-group col-sm-12 col-md-8 col-lg-4">
                                <strong class="obg">*</strong>
                                <label class="control-label">Número do Cartão</label>
                                <input asp-for="FaturamentoCartao.NumeroCartao" class="form-control" onkeyup="SomenteNumeros(this); VerificaCartao();" placeholder="0000 0000 0000 0000" maxlength="30" />
                                <span asp-validation-for="FaturamentoCartao.NumeroCartao" class="text-danger"></span>
                            </div>
                            <div class="col-md-1" style="padding-top: 26px;">
                                <img src="~/images/Cartoes/img_default_card.png" id="imgCartao" style="max-height: 80px; max-width: 80px;" />
                            </div>
                            <div class="fix"></div>
                            <div class="form-group col-sm-12 col-md-8 col-lg-4">
                                <strong class="obg">*</strong>
                                <label class="control-label">Titular do Cartão</label>
                                <input asp-for="FaturamentoCartao.TitularCartao" class="form-control" placeholder="Como no cartão" />
                                <span asp-validation-for="FaturamentoCartao.TitularCartao" class="text-danger"></span>
                            </div>

                            <div class="fix"></div>
                            <div class="form-group col-sm-6 col-md-4 col-lg-2">
                                <strong class="obg">*</strong>
                                <label class="control-label">Vencimento</label>
                                <select asp-for="FaturamentoCartao.Mes" class="form-control">
                                    <option value="00">Mês</option>
                                    <option value="01">01</option>
                                    <option value="02">02</option>
                                    <option value="03">03</option>
                                    <option value="04">04</option>
                                    <option value="05">05</option>
                                    <option value="06">06</option>
                                    <option value="07">07</option>
                                    <option value="08">08</option>
                                    <option value="09">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-6 col-md-4 col-lg-2">
                                <label class="control-label">&nbsp;</label>
                                <select class="form-control" asp-for="FaturamentoCartao.Ano" asp-items="ViewBag.AnoVencimento"></select>
                            </div>
                            <div class="fix"></div>
                            <div class="form-group col-sm-10 col-md-8 col-lg-4">
                                <strong class="obg">*</strong>
                                <label class="control-label">Código de Segurança</label>
                                <input class="form-control" asp-for="FaturamentoCartao.CVV" maxlength="5" placeholder="CVV" />
                            </div>
                            <div class="form-group col-sm-2 col-md-2 col-lg-2" style="padding-top: 39px; margin-left: -1px;">
                                <i class="fa fa-info-circle" aria-hidden="true" style="font-size: 25px;"></i>
                            </div>
                        </div>
                    </div>

                    <div class="fix"></div>
                    <h5 class="headwi primary">Controle de Produtos</h5>
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <span style="font-size: 11px;">
                            <span style="color: red;"><b>ATENÇÃO!</b></span> Deixando a lista de <u>Produtos Permitidos ao Aluno</u> <b>VAZIA</b>, será considerado que o ALUNO poderá adquirir TODOS os itens disponíveis para compra.
                        </span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-4">
                        <h5 class="headwi warning">Filtro por Categoria</h5>
                        <div class="form-horizontal group-border-dashed">
                            <div class="ibox-produtos">
                                <table id="tbProdutos" class="table hover table-noborder">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Categoria</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbody-categorias"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    @*LISTA PRODUTOS ESCOLA*@
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <h5 class="headwi primary">Lista de Produtos</h5>
                        <div class="form-horizontal">
                            <div class="ibox-produtos">
                                <table id="tbProdutos" class="table hover table-noborder">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Produto</th>
                                            <th>R$ Valor</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbody-produtos-escola"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    @*PRODUTOS PERMITIDOS AO ALUNO*@
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <h5 class="headwi success">Produtos Permitidos ao Aluno</h5>
                        <div class="form-horizontal group-border-dashed">
                            <div class="ibox-produtos">
                                <table id="tbProdutos" class="table hover table-noborder">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Produto</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbody-permissao-aluno"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@*ALTERA ALUNO*@
<div class="modal fade" tabindex="-1" id="modalAlteraAluno" data-keyboard="false" data-backdrop="false">
    <form asp-action="Create" method="get">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header-info">
                    <button type="button" class="close" data-dismiss="modal">
                        ×
                    </button>
                    <h4 class="modal-title">Informe o Aluno</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-8 col-lg-6">
                            <label>Aluno</label>
                            <select class="form-control" onchange="SelecionaAluno(this)" asp-items="(SelectList)ViewBag.Aluno"></select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <br />
                    <a class="btn btn-default" value="Cancelar" onclick="OpenModalSelecionaAluno(false);">Cancelar</a>
                    <input type="submit" class="btn btn-success" id="btnHideModal" value="Continuar" />
                </div>
            </div>
        </div>
    </form>
</div>
<div class="inProgress" id="inProgress" style="display: none;">
</div>
<div class="inProgress2" id="inProgress2" style="display: none;">
    <span class="color-primary" style="font-size: 25px"><i class="fa fa-spinner fa-spin"></i></span>
    <br />
    <span class="color-primary">Aguarde...</span>
</div>
<div id="result"></div>