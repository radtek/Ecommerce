@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Entrar";
    Layout = "_Login";
}

@if (TempData["mensagem"] != null)
{
    <div class="alert alert-danger">
        ATENÇÃO! @TempData["mensagem"]
    </div>
}

<div class="login-box">
    <div class="login-box-body">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <h4></h4>

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group has-feedback">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control">
                            <span class="text-danger glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="checkbox icheck">
                                    <label>
                                        <input type="checkbox"> Manter Logado
                                    </label>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
                            </div>
                            <div class="col-xs-12">
                                <p>
                                    <a asp-action="ForgotPassword">Esqueceu sua senha?</a>
                                </p>
                                <p>
                                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registrar com um novo usuário?</a>
                                </p>
                            </div>
                        </div>
                    </form>
