@model PortalEducacional.Models.Responsavel
@{
    ViewData["Title"] = "Novo";
}
<hr />
<div class="ibox-content">
    <div class="page-head">
        <h2><i class="fa fa-user-plus"></i> Cadastro de Responsável</h2>
        <ol class="breadcrumb">
            <li><a href="#">Responsáveis</a></li>
            <li><a href="#" class="color-primary">Cadastro de Responsável</a></li>
        </ol>
    </div>
    <div class="block-clean">
        <form asp-action="Create">
            <input type="hidden" asp-for="ResponsavelID" value="true" />
            <div class="col-sm-12 col-col-md-12 col-lg-12 no-padding right top">
                <a asp-action="Index" class="btn btn-default">Cancelar</a>
                <input type="submit" value=" Salvar" class="btn btn-success" id="btnSalvar" />
            </div>
            <div class="fix"></div>
            <div class="divisor">
                <div class="divdentor"></div>
            </div>
            <div class="row">
                <h5 class="headwi primary">Identificação do Responsável</h5>

                <div class="form-horizontal group-border-dashed">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group col-sm-4 col-md-4 col-lg-2">
                        <strong class="obg">*</strong>
                        <label asp-for="CPF" class="control-label">CPF</label>
                        <input asp-for="CPF" class="form-control mask-cpf" id="CPF" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-8 col-md-4 col-lg-3">
                        <strong class="obg">*</strong>
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-8 col-md-4 col-lg-3">
                        <strong class="obg">*</strong>
                        <label asp-for="Email" class="control-label">E-mail</label>
                        <input asp-for="Email" class="form-control" id="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4 col-md-3 col-lg-2">
                        <strong class="obg">*</strong>
                        <label asp-for="Telefone" class="control-label">Telefone</label>
                        <input asp-for="Telefone" class="form-control mask-telefone" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-3 col-md-3 col-lg-1">
                        <label asp-for="DataCadastro" class="control-label"></label>
                        <input asp-for="DataCadastro" class="form-control" id="DataCadastro" readonly />
                        <span asp-validation-for="DataCadastro" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-3 col-md-1 col-lg-1" style="margin-top: 24px">
                        <a id="btnAddResponsavel" class="btn btn-trans btn-info" style="width: 45px; font-size: 14px;"><i class="fa fa-plus"></i></a>
                    </div>
                </div>
            </div>
            <div class="fix"></div>
            <div class="divisor">
                <div class="divdentor"></div>
            </div>
            <div class="row">
                <h5 class="headwi primary">Responsáveis Adicionados</h5>
                <div class="form-horizontal group-border-dashed">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <table id="responsaveis-table" class="table hover table-noborder">
                        <thead>
                            <tr>
                                <th>Ações</th>
                                <th>CPF</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                            </tr>
                        </thead>
                        <tbody id="tbody-responsavel"></tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="inProgress" id="inProgress" style="display: none;">
</div>
<div class="inProgress2" id="inProgress2" style="display: none;">
    <span class="color-primary" style="font-size: 25px"><i class="fa fa-spinner fa-spin"></i></span>
    <br />
    <span class="color-primary">Aguarde...</span>
</div>
<div id="result"></div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}