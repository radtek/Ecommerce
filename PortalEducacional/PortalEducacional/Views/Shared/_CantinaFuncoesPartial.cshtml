@using Microsoft.AspNetCore.Identity
@using PortalEducacional.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">

            <li>
                <a style="color: white" href="#">@Html.Label(DateTime.Now.ToLongDateString())</a>
            </li>
            <li>
                <a style="color: white" asp-area="" asp-controller="Cantina" asp-action="Index">Usuário: @UserManager.GetUserName(User)</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a style="color: white" asp-area="" asp-controller="Account" asp-action="Register">Registre-se</a></li>
        <li><a style="color: white" asp-area="" asp-controller="Account" asp-action="Login">Entrar</a></li>
    </ul>
}