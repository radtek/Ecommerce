@model PortalEducacional.Models.Produto
<div>
    <div class="form-group col-sm-6 col-md-5 col-lg-4 has-feedback" style="margin-top: 7px">
        <strong class="obg">*</strong>
        <label>Código Produto</label>
        <input asp-for="Codigo" id="CodProduto" class="form-control" placeholder="Informe o Código ou Descrição do Produto para busca" />
        <input asp-for="ProdutoID" type="hidden" />
        <span class="glyphicon glyphicon-search form-control-feedback"></span>
    </div>
    <div class="form-group col-sm-6 col-md-5 col-lg-4" style="margin-top: 7px">
        <strong class="obg">*</strong>
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" readonly="@(true)" />
    </div>
    <div class="fix"></div>
</div>