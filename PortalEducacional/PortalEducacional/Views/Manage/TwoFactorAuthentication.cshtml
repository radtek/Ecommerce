@model TwoFactorAuthenticationViewModel
@{
    ViewData["Title"] = "Autenticação de dois fatores";
    ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
}

<h4>@ViewData["Title"]</h4>
@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            <strong>You have no recovery codes left.</strong>
            <p>You must <a asp-action="GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a> antes de iniciar sessão com um código de recuperação.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            <strong>Você tem 1 código de recuperação.</strong>
            <p>Você pode <a asp-action="GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            <strong>Você tem @Model.RecoveryCodesLeft códigos de recuperação deixados.</strong>
            <p>Você deve <a asp-action="GenerateRecoveryCodes">gerar um novo conjunto de códigos de recuperação</a>.</p>
        </div>
    }

    <a asp-action="Disable2faWarning" class="btn btn-default">Disable 2FA</a>
    <a asp-action="GenerateRecoveryCodes" class="btn btn-default">Redefinir códigos de recuperação</a>
}

<h5>Authenticator app</h5>
@if (!Model.HasAuthenticator)
{
    <a asp-action="EnableAuthenticator" class="btn btn-default">Adicionar aplicativo de autenticação</a>
}
else
{
    <a asp-action="EnableAuthenticator" class="btn btn-default">Configurar o aplicativo de autenticação</a>
    <a asp-action="ResetAuthenticatorWarning" class="btn btn-default">Redefinir a chave do autenticador</a>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
